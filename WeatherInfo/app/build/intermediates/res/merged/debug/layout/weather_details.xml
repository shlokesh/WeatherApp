<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/maxtemp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="@string/maxtemp"
                style="@style/textSmall"
                android:layout_weight="0.4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.4"
                style="@style/textTempSmall"
                android:id="@+id/maxTemp" />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/mintemp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/textSmall"
                android:text="@string/mintemp"
                android:layout_weight="0.4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/minTemp"
                style="@style/textTempSmall"
                android:layout_weight="0.4"/>
               "/>

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/wind"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/textSmall"
                android:text="@string/wind"
                android:layout_weight="0.4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/wind"
                style="@style/textTempSmall"
                android:layout_weight="0.4"
                />

        </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginBottom="10dp">

        <ImageView
            android:layout_height="30dp"
            android:layout_width="0dp"
            android:layout_weight="0.2"
            android:src="@drawable/rain"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            style="@style/textSmall"
            android:text="@string/rain"
            android:layout_weight="0.4"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/rain"
            android:layout_weight="0.4"
            style="@style/textTempSmall"
            />

        </TableRow>
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:layout_height="30dp"
                android:layout_width="0dp"
                android:layout_weight="0.2"
                android:src="@drawable/humidity"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/textSmall"
                android:text="@string/humidity"
                android:layout_weight="0.4"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:id="@+id/humidity"
                android:layout_weight="0.4"
                style="@style/textTempSmall"
                android:textAlignment="viewEnd"/>

        </TableRow>

  </TableLayout>

   <TextView
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
       android:layout_marginTop="10dp"
       style="@style/textSmall"
       android:id="@+id/time"/>


</LinearLayout><!-- From: file:/C:/Users/Lokesh/StudioProjects/WeatherInfo/app/src/main/res/layout/weather_details.xml -->